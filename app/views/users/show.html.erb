<h1><%= @user.username %></h1>
<br>
<%= button_to "Leave a Review", new_user_review_path(@user), method: "get", :class => "btn btn-success" %>
<br>
<h5>Skills:</h5>
<ul>
    <% @user.skills.each do |s| %>
        <li><%= s.name %></li>
    <% end %>
</ul>
<hr>
<% @user.reviews.each do |r| %>
    <small>Review from <%= r.author %>:</small>
    <p><%= r.comment %></p>
    <hr>
<% end %>